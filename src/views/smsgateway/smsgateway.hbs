<div class="col-sm-12" style="margin-top: 40px;">
  <div class="card">
    <div class="card-header">
      <h5 style="color: #F3A701; font-size: 20px;">SMS GATEWAY DETAIL</h5>
    </div>
  </div>

  <div class="card" style="margin-top: 40px;">

    <div class="card-body">
      <form class="mt-2">
          {{#each list}}
        <div class="layoutResponsive">
          <div class="col-sm-12">
            <div class="form-group">
              <img
                src="/assets/images/sms1.svg"
                alt=""
                style="width: 220px; height: 200px;"
              />
            </div>
          </div>
          <div class="col-sm-12">
            <div class="form-group">
              <label class="floating-label" for="gateway">Gateway</label>
              <input
                value={{gateway}}
                style="height: 70px"
                type="text"
                class="form-control"
                id="gateway"
                placeholder="Enter Gateway"
              />
            </div>
            <div class="form-group">
              <label class="floating-label" for="gatewayurl">Gateway Url</label>
              <input
              value={{gatewayurl}}
                style="height: 70px"
                type="text"
                class="form-control"
                id="gatewayurl"
                placeholder="Enter Gateway Url"
              />
            </div>
            <div class="form-group">
              <label class="floating-label" for="balance">Balance</label>
              <input
              value={{balance}}
                style="height: 70px"
                type="number"
                class="form-control"
                id="balance"
                placeholder="Enter Balance"
              />
            </div>

          </div>
          <div class="col-sm-12">
            <div class="form-group">
              <label class="floating-label" for="gatewaykeys">Gateway Keys</label>
              <input
              value={{gatewaykeys}}
                style="height: 70px"
                type="text"
                class="form-control"
                id="gatewaykeys"
                placeholder="Enter Gateway Keys"
              />
            </div>
            <div class="form-group">
              <label class="floating-label" for="gatewaypassword">Gateway
                Password</label>
              <input
              value={{gatewaypassword}}
                style="height: 70px"
                type="text"
                class="form-control"
                id="gatewaypassword"
                placeholder=""
              />
            </div>
            <div
              style="height: 90px; padding-top: 20px"
              class="custom-control custom-switch"
            >
              <input type="checkbox" {{#if status}}
                        checked
                        {{/if}}class="custom-control-input" id="status" />
              <label class="custom-control-label" for="status">Status</label>
            </div>
            <input
                type="hidden"
                id="id"
                name="id"
                value={{id}}
              />
          </div>
        </div>
        <button
          class="btn btn-primary float-right mt-3 mb-2 mr-4"
          type="button"
          id="update_smsgateway"
        >Save Settings</button>
        {{/each}}
      </form> 
        
    </div>
  </div>
</div>

{{#if isAdmin}}
  <li><a href="/settings/company">Admin</a></li>

{{/if}}