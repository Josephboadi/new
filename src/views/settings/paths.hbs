<div class="row">
  <!-- Config table start -->
  <div class="col-lg-12" style="margin-top: 10px;">
    <div class="card">
      <div class="card-header">
        <h5 style="color: #F3A701; font-size: 20px;">PATHS / DIRECTORIES</h5>
      </div>
    </div>
    <div class="card user-profile-list" style="margin-top: 40px;">
      <div class="card-body">
        <div class="row align-items-center m-l-0">
          <div class="col-sm-6">
          </div>
          <div class="col-sm-6 text-right mb-3">
            <button
              class="btn btn-primary btn-sm btn-round has-ripple"
              data-toggle="modal"
              data-target="#modal-report"
            ><i class="feather icon-plus"></i> Add PATH/DIRECTORY</button>
          </div>
        </div>
        <div class="dt-responsive table-responsive">
          <table id="basic-btn" class="table nowrap">
            <thead>
              <tr>

                <th>Action</th>
                <th>Print Path</th>
                <th>Pdf Path</th>
                <th>Image Path</th>
                <th>Text Path</th>

              </tr>
            </thead>
            <tbody>
              {{#each list}}
                <tr>

                  <td>
                    <span class="badge badge-light-danger"></span>
                    <div class="overlay-edit">
                      {{! <button
                        id="delete"
                        onClick="deletecomp(idsys_users)"
                        type="button"
                        class="btn btn-icon btn-danger"
                      ><i class="feather id="getsingle_path" icon-trash-2"></i></button> }}
                      <a href="/settings/path/{{idsettings_paths}}">
                    
                        <button  type="button"    class="btn btn-icon btn-success">

                          <i class="feather icon-eye" style="color: white"></i>

                        </button>
                      </a>

                    </div>
                  </td>
                  <td>
                    {{src_swift_docs_path_print}}
                  </td>
                  <td>{{src_swift_docs_path_pdf}}</td>
                  <td>{{src_swift_docs_path_img}}</td>
                  <td>{{src_swift_docs_path_txt}}</td>

                </tr>
              {{/each}}

            </tbody>

          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="modal-report"
  tabindex="-1"
  role="dialog"
  aria-labelledby="myExtraLargeModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Path/Directory</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label class="floating-label" for="src_swift_docs_path_print">Print Path</label>
                <input
                  type="text"
                  class="form-control"
                  id="src_swift_docs_path_print"
                  placeholder="Print Path"
                />
              </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group">
                <label class="floating-label" for="src_swift_docs_path_pdf">Pdf Path</label>
                <input
                  type="text"
                  class="form-control"
                  id="src_swift_docs_path_pdf"
                  placeholder="Pdf Path"
                />
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group fill">
                <label class="floating-label" for="src_swift_docs_path_img">Image Path</label>
                <input
                  type="text"
                  class="form-control"
                  id="src_swift_docs_path_img"
                  placeholder="Image Path"
                />
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group fill">
                <label class="floating-label" for="src_swift_docs_path_txt">Text Path</label>
                <input
                  type="text"
                  class="form-control"
                  id="src_swift_docs_path_txt"
                  placeholder="Text Path"
                />
              </div>
            </div>
           
            </div>

            <div
              class="col-sm-12 mt-2"
              style="border-bottom: 1px solid #E3EAEF;"
            ></div>
            {{! <div class="card-body"> }}
            <div
              class="col-sm-12 mt-3"
              style="display:flex; justify-content:space-between"
            >

              {{! <button class="btn btn-danger">Clear</button> }}
              <button
                type="button"
                class="btn btn-primary float-right"
                style="display:flex; justify-self:flex-end; align-self:flex-end;"
                name="add_path"
                id="add_path"
              >Submit</button>
            </div>
            {{! </div> }}

          </div>
        </form>
      </div>
    </div>
  </div>
</div>