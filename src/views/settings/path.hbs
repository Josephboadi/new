<div class="col-sm-12" style="margin-top: 40px;">
  <div class="card">
    <div class="card-header">
      <h5 style="color: #F3A701; font-size: 20px;">PATHS FOR SOURCE FILES</h5>
    </div>
  </div>

  <div class="card" style="margin-top: 40px;">

    <div class="card-body">
      <form class="mt-2">
        {{#each list}}
          <div class="layoutResponsive">
            <div class="col-sm-12">
              <div class="form-group">
                <img
                  src="/assets/images/path1.svg"
                  alt=""
                  style="width: 220px; height: 200px;"
                />
              </div>
            </div>
            <div class="col-sm-12">
              <div class="form-group">
                <label
                  class="floating-label"
                  for="src_swift_docs_path_print"
                >Print Path</label>
                <input
                  value={{src_swift_docs_path_print}}
                  style="height: 70px"
                  type="text"
                  class="form-control"
                  id="src_swift_docs_path_print"
                  name="src_swift_docs_path_print"
                  placeholder="Enter Print Path"
                />
              </div>
              <div class="form-group">
                <label class="floating-label" for="src_swift_docs_path_pdf">Pdf
                  Path</label>
                <input
                  value={{src_swift_docs_path_pdf}}
                  style="height: 70px"
                  type="text"
                  class="form-control"
                  id="src_swift_docs_path_pdf"
                  name="src_swift_docs_path_pdf"
                  placeholder="Enter Pdf Path"
                />
              </div>

            </div>
            <div class="col-sm-12">
              <div class="form-group">
                <label
                  class="floating-label"
                  for="src_swift_docs_path_img"
                >Image Path</label>
                <input
                  value={{src_swift_docs_path_img}}
                  style="height: 70px"
                  type="text"
                  class="form-control"
                  id="src_swift_docs_path_img"
                  name="src_swift_docs_path_img"
                  placeholder="Enter Image Path"
                />
              </div>
              <div class="form-group">
                <label class="floating-label" for="src_swift_docs_path_txt">Text
                  Path</label>
                <input
                  value={{src_swift_docs_path_txt}}
                  style="height: 70px"
                  type="text"
                  class="form-control"
                  id="src_swift_docs_path_txt"
                  name="src_swift_docs_path_txt"
                  placeholder="Enter Text
                Path"
                />
              </div>
              <input
                type="hidden"
                id="idsettings_paths"
                name="idsettings_paths"
                value={{idsettings_paths}}
              />

            </div>
          </div>
          <button
            class="btn btn-primary float-right mt-3 mb-2 mr-4"
            type="submit"
            id="update_path"
          >Save Settings</button>

        {{/each}}
      </form>

    </div>
  </div>
</div>

{{#if isAdmin}}
  <li><a href="/settings/company">Admin</a></li>

{{/if}}